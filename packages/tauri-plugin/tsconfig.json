{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "outDir": "./dist-js",
    "rootDir": "./guest-js",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["guest-js/**/*"],
  "exclude": ["node_modules", "dist-js"]
}
