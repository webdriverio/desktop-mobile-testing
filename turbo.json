{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "//#format:check": {
      "dependsOn": [],
      "inputs": ["**/*.{j,t}s", "**/*.{yml,md,json}", "package.json"],
      "cache": false
    },
    "//#format": {
      "dependsOn": [],
      "inputs": ["**/*.{j,t}s", "**/*.{yml,md,json}", "package.json"],
      "cache": false
    },
    "//#lint": {
      "dependsOn": [],
      "inputs": ["**/*.{j,mj,cj,t}s", "eslint.config.js", "biome.json", "package.json"],
      "outputs": [".eslintcache"]
    },
    "//#lint:fix": {
      "dependsOn": [],
      "inputs": ["**/*.{j,mj,cj,t}s", "eslint.config.js", "biome.json", "package.json"],
      "outputs": [".eslintcache"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:unit": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:integration": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "dependsOn": [],
      "cache": true
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "clean:dist": {
      "cache": false
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "@repo/e2e#build": {
      "dependsOn": ["@wdio/electron-service#build", "@wdio/tauri-service#build"]
    },
    "@repo/e2e#test:e2e:electron-builder": {
      "dependsOn": ["electron-builder-e2e-app#build"]
    },
    "@repo/e2e#test:e2e:electron-forge": {
      "dependsOn": ["electron-forge-e2e-app#build"]
    },
    "@repo/e2e#test:e2e:electron-no-binary": {
      "dependsOn": ["electron-no-binary-e2e-app#build"]
    },
    "@repo/e2e#test:e2e-mac-universal:electron-builder": {
      "dependsOn": ["electron-builder-e2e-app#build:mac-universal"]
    },
    "@repo/e2e#test:e2e-mac-universal:electron-forge": {
      "dependsOn": ["electron-forge-e2e-app#build:mac-universal"]
    },
    "@repo/e2e#test:e2e:tauri:basic": {
      "dependsOn": ["tauri-e2e-app#build", "@wdio/tauri-service#build"]
    },
    "@repo/e2e#test:e2e:tauri:basic:window": {
      "dependsOn": ["tauri-e2e-app#build", "@wdio/tauri-service#build"]
    },
    "@repo/e2e#test:e2e:tauri:basic:multiremote": {
      "dependsOn": ["tauri-e2e-app#build", "@wdio/tauri-service#build"]
    },
    "@repo/e2e#test:e2e:tauri:basic:standalone": {
      "dependsOn": ["tauri-e2e-app#build", "@wdio/tauri-service#build"]
    },
    "@wdio/bundler#build": {
      "dependsOn": ["typecheck"],
      "outputs": ["dist/**"]
    },
    "@wdio/native-types#build": {
      "dependsOn": ["@wdio/bundler#build", "typecheck"],
      "outputs": ["dist/**"]
    },
    "@wdio/native-utils#build": {
      "dependsOn": ["@wdio/native-types#build", "typecheck"],
      "outputs": ["dist/**"]
    },
    "@wdio/electron-cdp-bridge#build": {
      "dependsOn": ["@wdio/native-utils#build", "typecheck"],
      "outputs": ["dist/**"]
    },
    "@wdio/electron-service#build": {
      "dependsOn": ["@wdio/electron-cdp-bridge#build"],
      "outputs": ["dist/**"]
    },
    "@wdio/tauri-plugin#build:js": {
      "outputs": ["dist-js/**"]
    },
    "@wdio/tauri-service#build": {
      "dependsOn": ["@wdio/tauri-plugin#build:js", "typecheck"],
      "outputs": ["dist/**"]
    },
    "electron-builder-e2e-app#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "electron-forge-e2e-app#build": {
      "dependsOn": ["^build"],
      "outputs": ["out/**"]
    },
    "electron-no-binary-e2e-app#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "electron-builder-e2e-app#build:mac-universal": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "electron-forge-e2e-app#build:mac-universal": {
      "dependsOn": ["^build"],
      "outputs": ["out/**"]
    },
    "tauri-e2e-app#build": {
      "dependsOn": ["@wdio/tauri-plugin#build:js", "^build"],
      "outputs": ["src-tauri/target/**"]
    },
    "tauri-e2e-app#build:debug": {
      "dependsOn": ["@wdio/tauri-plugin#build:js", "^build"],
      "outputs": ["src-tauri/target/**"]
    }
  }
}
