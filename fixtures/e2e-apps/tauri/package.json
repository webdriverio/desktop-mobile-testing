{
  "name": "tauri-e2e-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "tauri": "tauri",
    "dev": "vite",
    "build:js": "pnpm --filter @wdio/tauri-plugin build:js",
    "build:web": "vite build",
    "build": "pnpm build:js && pnpm build:web && tauri build",
    "build:debug": "pnpm build:js && pnpm build:web && tauri build --debug && tsx scripts/copy-debug-binary.ts",
    "test": "wdio run ./wdio.conf.ts"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/plugin-fs": "^2.0.0",
    "@tauri-apps/plugin-log": "^2.7.1",
    "@wdio/tauri-plugin": "workspace:*"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.9.6",
    "@wdio/cli": "^9.22.0",
    "@wdio/local-runner": "^9.22.0",
    "@wdio/mocha-framework": "^9.22.0",
    "@wdio/spec-reporter": "^9.0.0",
    "@wdio/tauri-service": "workspace:*",
    "typescript": "^5.0.0",
    "vite": "^7.3.0"
  }
}
